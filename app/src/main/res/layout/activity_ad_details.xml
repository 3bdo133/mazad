<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#384043"
    android:fillViewport="true"
    android:focusable="true"
    android:layoutDirection="rtl"
    android:scrollbars="none"
    tools:context=".AdDetailsActivity"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#384043"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layoutDirection="rtl"
        tools:context=".AdDetailsActivity"
        tools:ignore="UnusedAttribute">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/toolbar_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_user"
                        android:drawableTint="#45BBD9"
                        android:gravity="center"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="MissingPrefix,RtlHardcoded,SmallSp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="عبدالله654548"
                        android:textColor="#45BBD9"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_location"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="10sp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:text="جده"
                        android:textColor="#45BBD9"
                        android:textStyle="bold"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="MissingPrefix,RtlHardcoded,SmallSp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_back_arrow"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="الرئيسيه"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="RtlHardcoded,MissingPrefix"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="10sp"
                        android:text="قبل 1 دقيقة"
                        android:textColor="#45BBD9"
                        android:textStyle="bold"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="RtlHardcoded,MissingPrefix"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:id="@+id/parent_layout_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/detail_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="للبيع راف فور موديل 2014 خالي من العيوب والرش والسمكره والمحركات نضيفه جدا وعلي الشرط بيني وبين البائع الفحص الموقع جدة شارع باخشب"
                        android:textAlignment="center"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="RtlHardcoded,MissingPrefix"
                        android:textColor="@android:color/black"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:id="@+id/images_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="60dp"
                        android:orientation="vertical">

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_button"
                        android:elevation="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/ic_phone"
                            android:drawableTint="#45BBD9"
                            android:paddingBottom="10dp"
                            fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                            tools:ignore="RtlHardcoded,MissingPrefix"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:textSize="11sp"
                            android:text="0563596678"
                            android:textColor="#45BBD9"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#9E9E9E" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_go_arrow"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/ic_email_nav"
                            android:drawableTint="#45BBD9"
                            fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                            tools:ignore="RtlHardcoded,MissingPrefix"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:id="@+id/send_message"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:text="رسالة"
                            android:textSize="11sp"
                            android:textColor="#45BBD9"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_button"
                        android:elevation="10dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/favorite"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:onClick="loveClicked"
                            android:src="@mipmap/ic_love" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:id="@+id/share_whatsapp"
                            android:src="@mipmap/ic_whatsapp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:id="@+id/share_twitter"
                            android:src="@mipmap/ic_twitter" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/replies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />


                    <EditText
                        android:id="@+id/reply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="RtlHardcoded,MissingPrefix"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:hint="اضف رد"
                        android:textSize="12sp"
                        android:inputType="text"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/add_reply_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_button"
                        android:drawableLeft="@drawable/ic_reply_black_24dp"
                        android:drawableTint="#45BBD9"
                        android:elevation="10dp"
                        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                        tools:ignore="RtlHardcoded,MissingPrefix"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:text="اكتب ردا"
                        android:textAlignment="center"
                        android:textColor="#45BBD9"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_button"
                android:elevation="10dp"
                android:gravity="center"
                fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                tools:ignore="RtlHardcoded,MissingPrefix"
                android:paddingBottom="5dp"
                android:paddingLeft="90dp"
                android:paddingRight="90dp"
                android:paddingTop="5dp"
                android:text="راف فور للبيع"
                android:textAlignment="center"
                android:textColor="#45BBD9"
                android:textSize="13sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>