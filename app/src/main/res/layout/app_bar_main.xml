<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:ignore="MissingPrefix,UnusedAttribute">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/receive_name"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_description"
                    android:src="@drawable/ic_user_registered"/>

                <TextView
                    android:id="@+id/receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
                    fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                    android:layout_height="wrap_content"
                    android:text="عبدالله 656548"
                    android:textColor="#45BBD9"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description"
                android:src="@drawable/im_back_icon"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/news"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_24" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="الرسائل"
                tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
                fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                android:textColor="#45BBD9"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/register_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/content_description"
                    android:paddingLeft="10dp"
                    android:adjustViewBounds="true"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_new_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="ابوصالح"
                    tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
                    fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:id="@+id/user_name"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#45BBD9"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:background="#F6F6F6"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        app:itemIconTint="@drawable/nav_item_colors"
        app:itemTextColor="@drawable/nav_item_colors"
        app:menu="@menu/bottom_nav_items" />


    <include
        layout="@layout/content_main"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/app_bar" />


</RelativeLayout>