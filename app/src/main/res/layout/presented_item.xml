<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:foreground="?attr/selectableItemBackground"
    android:layoutDirection="rtl"
    tools:ignore="UnusedAttribute">


    <ImageView
        android:id="@+id/favorite"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/im_heart"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/person_name"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_person"
        android:gravity="center"
        android:layout_below="@id/product_name"
        android:padding="5dp"
        android:textColor="#45BBD9"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        tools:text="عبدالله654548" />


    <TextView
        android:layout_width="wrap_content"
        android:text="فرصة ذهبية"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/location"
        android:textSize="9sp"
        android:gravity="center"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:textColor="#FFD40B"
        android:layout_below="@id/product_name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="visible"
        android:id="@+id/star"
        android:layout_toLeftOf="@id/person_name"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded,SmallSp" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/product_image"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/im_test"
        tools:ignore="RtlHardcoded"
        app:riv_corner_radius="15dp"
        app:riv_border_width="2dp"
        app:riv_border_color="#9e9e9e"/>


    <TextView
        android:id="@+id/product_name"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/favorite"
        android:layout_toRightOf="@id/product_image"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        tools:text="راف فور للبيع...." />

    <TextView
        android:id="@+id/location"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/product_name"
        android:layout_toRightOf="@id/product_image"
        android:drawableRight="@drawable/ic_location"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#45BBD9"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        tools:text="جده" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#9E9E9E" />


</RelativeLayout>